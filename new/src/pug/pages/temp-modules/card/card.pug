            +form-input('Комментарий')
            +form-input('Поставщик')
            +form-input('Город')
            +form-input('Наличие')
            +form-input-select('Цена', ['₽', '$'], 1)
            +form-select(['с НДС', 'без НДС'], 1)
            +form-input-select('Название поля', ['шт','л','гр',], 1)
            +e.manage
                +e.photos
                    +icon('cameraSharp', 'cards-write-offers__photos-icon')
                +e.SPAN.show-more.j-show-more-dd-btn 
                    +e.show-more-text Еще
                    +icon('dropdown', 'show-more-dropdown__icon')
                +e.SPAN.list
                    +icon('list', 'cards-write-offers__list-icon')
                +e.write.btn.btn._blue Предложить
        +b.cards-offers.cards__content
            +cards-top('Прокладка впускного коллектора (1374340) SCANIA D/DS2', '', '', '', ['3 500', 'НДС'], '', ['2360-2910210', 'Scania', 'Сталь 20', '5 брендов', '4 листа'])
