+b.cards 
    +e.item
        include item
        +b.FORM.cards-write-offers.j-show-more-dd
            .form-group
                input.input.require(type="text" placeholder="Поставщик")
            +form-input('Город')
            .form-group
                input.input.require(type="text" placeholder="Наличие")
            +form-input-select('Цена', ['₽', '$'])
            +form-select(['с НДС', 'без НДС'])
            +form-input-select('Название поля', ['шт','л','гр',])
            +form-input-select('Название поля', ['л','шт','гр',])
            +form-select(['Тип', 'Бренд', 'Вариант 1', 'Вариант 2', 'Вариант 3', 'Вариант 4', 'Вариант 5',])
            +form-select(['Назначение', 'Бренд', 'Вариант 1', 'Вариант 2', 'Вариант 3', 'Вариант 4', 'Вариант 5',])
            +form-select(['Тип применения', 'Бренд', 'Вариант 1', 'Вариант 2', 'Вариант 3', 'Вариант 4', 'Вариант 5',])
