include ../mixins/mixin-loader.pug

block vars
	-
		var title = title || ''
		var description = description || ''
		var image = image || ''
	-
		var html = {
			attrs: {
				lang: 'ru'
			},
			classList: []
		}
	-
		var body = {
			attrs: {},
			classList: []
		}
	-
		var meta = {
			charset: 'utf-8',
			description: description,
			keywords: [],
			ogTitle: title,
			viewport: 'width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1',
			XUACompatible: 'IE=edge'
		}
	-
		var link = {
			icon: '',
			icon16x16: '',
			icon32x32: '',
		}

doctype html
html(class=html.classList)&attributes(html.attrs)
	head
		block head-start
		block meta
			if meta.charset
				meta(charset=meta.charset)
			if meta.XUACompatible
				meta(http-equiv="X-UA-Compatible" content=meta.XUACompatible)
			if meta.viewport
				meta(name="viewport" content=meta.viewport)
			if meta.description
				meta(name="description" content=meta.description)
		title
			= title
		block links
			if link.icon
				link(rel="icon" href=link.icon)
			if link.icon16x16
				link(rel="icon" href=link.icon16x16 sizes="16x16")
			link(href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;700&family=Open+Sans:wght@300;400;500;600;700;800&display=fallback" rel="stylesheet")
			//- link(rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css")
			link(rel="stylesheet" href="/css/app.css?v=" + Date.now())
			script.
				function canUseWebP(){var e=document.createElement("canvas");return!(!e.getContext||!e.getContext("2d"))&&0==e.toDataURL("image/webp").indexOf("data:image/webp")}var root=document.getElementsByTagName("html")[0];canUseWebP()?root.classList.add("ws"):root.classList.add("wn");
		block head-end
	body(class=body.classList)&attributes(body.attrs)
		block body-start

		main
			block header
				include ../modules/header
				include ../modules/share-need
			block sidebar
				include ../modules/sidebar
			block content
			block footer 
		block popup 
			include ../modules/modals/sending-needs
			include ../modules/modals/create-supplier
			include ../modules/modals/need-sent
			include ../modules/modals/link-copied
			include ../modules/modals/need-history
			include ../modules/modals/offers
			include ../modules/modals/registration
			include ../modules/modals/needs
			include ../modules/modals/subscriptionToEmex
			include ../modules/modals/editSubscriptionAcc
			include ../modules/modals/brand-groups

		block scripts
			script(src="https://code.jquery.com/jquery-3.6.0.js")
			script(src="https://code.jquery.com/ui/1.13.1/jquery-ui.js")
			script(src="https://cdn.jsdelivr.net/npm/just-validate@3.8.1/dist/just-validate.production.min.js")
			//- script(src="https://unpkg.com/swiper@8/swiper-bundle.min.js")
			script(src="/js/app.js?v=" + Date.now())
				
		block body-end